{
  "manifest_version": 2,
  "name": "Focus Input Extension",
  "version": "1.0",
  "description": "Brings input boxes to your preferred position with AI-powered assistance.",

  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "<all_urls>",
    "https://openrouter.ai/*"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],

  "web_accessible_resources": [
    "style.css"
  ],

  "commands": {
    "toggle-extension": {
      "suggested_key": {
        "default": "Ctrl+Shift+F"
      },
      "description": "Toggle the Focus Input Extension on/off"
    },
    "toggle-mode": {
      "suggested_key": {
        "default": "Ctrl+Shift+X"
      },
      "description": "Toggle between Habit and Advanced mode"
    }
  }
}

